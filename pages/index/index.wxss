/**index.wxss**/

page{
  width: 100%;
  height:100%;
  overflow: hidden;
}

.background{
  width:100%;
  height:20%;
  background: #0082c8;
  position:absolute;
}

/* 非背景的额外所有元素 */
.content{
  margin-top:5%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

/* 滑块的背景样式 */
.bar-background{
  width: 90%;
  border-radius:10rpx;
  border-left-style: outset;
  border-left-color: #0082c8;
  box-shadow: 3px 3px 5px 1px rgb(196, 196, 196);
  background-color: rgba(255, 255, 255, 0.952);
}

/* "请选择您的风险偏好等级：#的综合 "字符样式 */
.ask-risk-text{
  display: flex;
  margin-top: 6%;
  margin-left: 15%;
  align-items: center;
}

/* "请选择您的风险偏好等级："字符样式 */
.ask{
  display: block;
  color:rgb(85, 83, 83);
  font-size:30rpx;
  
}

/* 数字的字符样式 */
.risk-level{
  display: block;
  margin-left: 1%; 
  font-size: 200%;
  color:rgb(75, 73, 73);
}

/* "低" 字符样式 */
.low{
  position: absolute;
  left: 9%;
  color:grey;
}

/* "高" 字符样式 */
.high{
  position: absolute;
  right: 9%;
  color:grey;
}

/* 滑块本身 */
.tui-slider-box{
  margin-top: 10%;
  margin-left: 10%;
  margin-right: 10%;
  border-radius: 25rpx;
  background: linear-gradient(to right, #7fc0df, #3363c9);
}

/* 滑块底部文字描述 */
.tui-slider-head{
  display: block;
  text-align: center;
  margin-top: 2.5%;
  margin-bottom: 4%;
  color:grey;
  font-size: 28rpx;
}

/* 风险等级详情的背景部分 */
.description-background {
  margin-top:10%;
  width: 90%;
  background-color: rgba(255, 255, 255, 0.952);
  border-radius: 10rpx;
  border-left-style: outset;
  border-left-color: #0082c8;
  box-shadow: 6rpx 6rpx 8rpx 4rpx rgb(196, 196, 196);
}

/* “风险等级详情" */
.description_title {
  display: block;
  text-align: center;
  margin-top: 2%;
  color:rgb(75, 73, 73);
  font-size: 30rpx;
}

/* 风险等级详情的描述部分 */
.description{
  display: flex;
  margin-left: 6%;
  margin-right:6%;
  margin-bottom: 3%;
  color:grey;
  font-size: 26rpx;
  
}

/* 按钮样式 */
.confirm-btn{
  width: 60%;
  margin-top: 8%;
  border-radius:98rpx;
  background-color:#0082c8;
  box-shadow: 3px 3px 5px 1px rgb(196, 196, 196);
}

/* "确认"字样 */
.confirm{
  color: white;
  font-size: 33rpx;
}

.extra{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin-top: 1200rpx;
  min-height: 400rpx;
}
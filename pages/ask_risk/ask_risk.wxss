/* pages/ask_risk/ask_risk.wxss */

page{
  width: 100%;
  height:100%;
  overflow: hidden;
}

.content{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.blk1{
  margin-top:30rpx;
  width: 90%;
  background-color: rgba(211, 211, 211, 0.521);
  border-radius:30rpx;
}

.blk1_son{
  width: 90%;
  margin-left: 5%;
}

/* “测试介绍”文字 */
.description1{
  display: flex;
  font-size: 100%;
  color: rgb(75, 73, 73);
}

/* 测试介绍内容 */
.description2{
  display: flex;
  font-size: 75%;
  color: grey;
  margin-bottom:40rpx;
}

/* 问卷图标 */
.icon{
  margin-top: 10%;
  width: 600rpx;
  height: 400rpx;
}

/* 开始按钮 */
.btn1{
  margin-top:50rpx;
  width:50%;
  border-radius:98rpx;
  background-color:#0082c8;
  color:white;
  border-style:outset;
}

.btn1::after{
  border-radius:98rpx;
  border:0;
}

.start{ /* “开始”按钮文字 */
  font-size:40rpx;
  color: white;
}

/* 跳过按钮 */
.btn2{
  margin-top:50rpx;
  width:50%;
  border-radius:98rpx;
  background-color:#ffffff;
  border-style:outset;
}

.btn2::after{
  border-radius:98rpx;
  border:0;
}

.skip{
  font-size:40rpx;
  color: rgb(2, 108, 179);
}
